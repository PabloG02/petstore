<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns="http://jboss.org/schema/arquillian"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://jboss.org/schema/arquillian
                                http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <defaultProtocol type="Servlet 6.0"/>

    <container qualifier="wildfly-managed" default="true">
        <configuration>
            <!-- Set the path to your WildFly installation (or use -Djboss.home / JBOSS_HOME) -->
            <property name="jbossHome">${jboss.home}</property>
            <property name="serverConfig">standalone.xml</property>
            <property name="allowConnectingToRunningServer">true</property>
            <!-- Inject JaCoCo agent into the managed container when provided by Gradle test task -->
            <property name="javaVmArguments">${jacoco.javaagent}</property>
        </configuration>
    </container>

</arquillian>
